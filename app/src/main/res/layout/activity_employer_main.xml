<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="top">

    <include
        android:id="@+id/headerEmployer"
        layout="@layout/activity_employer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="20dp">

        <ProgressBar
            android:id="@+id/Databar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/money_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="실시간 총 사용금액 : "
            android:textSize="20sp"/>

        <Button
            android:id="@+id/useButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상세보기"
            android:textSize="20sp"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/houseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주택정보 조회"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>
        <Button
            android:id="@+id/contractButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계약정보 조회"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>
        <Button
            android:id="@+id/moneyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="청구금액 확인"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
</LinearLayout>